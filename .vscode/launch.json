    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Lua",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lua-debug.exe",
            "args": ["${workspaceFolder}/custom_test.lua"],
            "cwd": "${workspaceFolder}",
            // "stopAtEntry": true,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\w64devkit\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "name": "Build and Debug Lua",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lua.exe",
            "args": ["${workspaceFolder}/custom_test.lua"],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\w64devkit\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Lua Build"
        }
    ]
}